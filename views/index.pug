extends ./layout.pug

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Information

        // register form
        form(method='POST' action='/sendmail')
          div.form-group
            label(for='subject') Subject:
            input#subject.form-control(type='text', placeholder='Subject' name='subject')
          div.form-group
            label(for='content') Content:
            input#content.form-control(type='text', placeholder='' name='content')
          div.form-group
            label(for='from') From:
            input#from.form-control(type='number', placeholder='' name='from')
          div.form-group
            label(for='to') To:
            input#to.form-control(type='number', placeholder='' name='to')
          button.btn.btn-primary(type='submit') Send

